<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="6dip"
    >

    <TextView
        android:id="@+id/moyen_name2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/moyen_inervention_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/moyen_inervention_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/btn_req_refuse"
        android:layout_alignTop="@+id/btn_req_valid"
        android:layout_toRightOf="@+id/moyen_name2"
        android:layout_toEndOf="@+id/moyen_name2" />


    <TextView
        android:id="@+id/moyen_inervention_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/moyen_inervention_address"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_req_valid"
        android:layout_toStartOf="@+id/btn_req_valid" />





    <Button
        android:id="@+id/btn_req_valid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="v"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_req_refuse"
        android:layout_toStartOf="@+id/btn_req_refuse" />

    <Button
        android:id="@+id/btn_req_refuse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="x"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>